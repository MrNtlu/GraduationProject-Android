<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme. -->
    <style name="Theme.Localsocialmedia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/toolbarBackgroundColor</item>

        <!-- Customize your theme here. -->
        <item name="toolbarBackgroundColor">@color/darkWhite</item>
        <item name="toolbarTintColor">@color/black</item>

        <item name="contentTextColor">@color/black</item>
        <item name="contentBackground">@color/white</item>

        <item name="editTextColor">@color/black</item>
        <item name="editTextHintColor">@color/hint_grey</item>
        <item name="editTextBackgroundColor">@color/white</item>
        <item name="editTextLayoutBackgroundColor">@color/white</item>

        <item name="buttonBackgroundColor">@color/colorPrimary</item>
        <item name="buttonTextColor">@color/white</item>
    </style>
</resources>