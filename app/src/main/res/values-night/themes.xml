<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Night Theme -->
    <style name="Theme.Localsocialmedia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/toolbarBackgroundColor</item>
        <!-- Switch Colors -->
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <!-- Customize your theme here. -->
        <item name="toolbarBackgroundColor">@color/lighterBlack</item>
        <item name="toolbarTintColor">@color/white</item>

        <item name="bottomNavBackgroundColor">@color/lighterBlack</item>
        <item name="bottomNavUnselectedItemColor">@color/darkGrey</item>
        <item name="bottomNavSelectedItemColor">@color/white</item>

        <item name="contentTextColor">@color/white</item>
        <item name="contentBackground">@color/lightBlack</item>

        <item name="editTextColor">@color/white</item>
        <item name="editTextHintColor">@color/darkWhite</item>
        <item name="editTextBackgroundColor">@color/black</item>
        <item name="editTextLayoutBackgroundColor">@color/black</item>

        <item name="buttonBackgroundColor">@color/colorPrimary</item>
        <item name="buttonTextColor">@color/white</item>
    </style>

    <!-- Toolbar Overflow -->
    <style name="ToolbarTheme">
        <item name="android:tint">?attr/toolbarTintColor</item>
        <item name="navigationIconTint">?attr/toolbarTintColor</item>
        <item name="android:background">?attr/toolbarBackgroundColor</item>
    </style>
</resources>