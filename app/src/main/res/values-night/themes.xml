<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Night Theme -->
    <style name="Theme.Localsocialmedia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/toolbarBackgroundColor</item>

        <!-- Customize your theme here. -->
        <item name="toolbarBackgroundColor">@color/black</item>
        <item name="toolbarTintColor">@color/white</item>

        <item name="contentTextColor">@color/white</item>
        <item name="contentBackground">@color/black</item>
    </style>
</resources>